<Window x:Class="WpfApp1.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Add Student" Height="450" Width="400">
    <Grid>
        <Button x:Name="ButtonAddStudent" Content="Add student" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top" Height="51" Width="208" Click="ButtonAddStudent_Click"/>
        <Label Content="First name:" HorizontalAlignment="Left" Margin="81,171,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TextBoxFirstName" HorizontalAlignment="Left" Height="31" Margin="189,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" FontSize="16"/>
        <Label Content="Surname:" HorizontalAlignment="Left" Margin="81,207,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TextBoxSurname" HorizontalAlignment="Left" Height="31" Margin="189,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" FontSize="16"/>
        <Label Content="Faculty:" HorizontalAlignment="Left" Margin="81,243,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TextBoxFaculty" HorizontalAlignment="Left" Height="31" Margin="189,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" FontSize="16"/>
        <Label Content="Student No.:" HorizontalAlignment="Left" Margin="81,279,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TextBoxStudentNo" HorizontalAlignment="Left" Height="31" Margin="189,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" FontSize="16"/>

    </Grid>
</Window>
