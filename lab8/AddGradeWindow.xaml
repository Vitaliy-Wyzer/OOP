<Window x:Class="WpfApp1.AddGradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Add grade
        " Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="289*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonAddGrade" Content="Add grade" HorizontalAlignment="Left" Height="48" Margin="72,355,0,0" VerticalAlignment="Top" Width="256" FontSize="16" Grid.ColumnSpan="2" Click="ButtonAddGrade_Click"/>
        <Label Content="Subject:" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Center" FontSize="16" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBoxSubject" HorizontalAlignment="Left" Margin="67,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" FontSize="16" Grid.Column="1"/>
        <Label Content="Grade:" HorizontalAlignment="Left" Margin="90,246,0,0" VerticalAlignment="Top" FontSize="16" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBoxGrade" HorizontalAlignment="Left" Margin="67,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="16" Grid.Column="1"/>

    </Grid>
</Window>
