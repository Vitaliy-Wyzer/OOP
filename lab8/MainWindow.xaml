<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Students" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonAddStudent" Content="Add student" HorizontalAlignment="Left" Height="71" Margin="34,28,0,0" VerticalAlignment="Top" Width="180" Click="ButtonAddStudent_Click"/>
        <Button x:Name="ButtonDeleteStudent" Content="Delete Student" HorizontalAlignment="Left" Height="71" Margin="220,28,0,0" VerticalAlignment="Top" Width="180" Click="ButtonDeleteStudent_Click"/>
        <DataGrid x:Name="DataGridStudents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,117,10,10"/>
        <Button x:Name="ButtonAddGrade" Content="Add Grade" HorizontalAlignment="Left" Height="71" Margin="405,28,0,0" VerticalAlignment="Top" Width="180" Click="ButtonAddGrade_Click"/>

    </Grid>
</Window>
